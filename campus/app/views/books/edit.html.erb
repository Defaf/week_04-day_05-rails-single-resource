<h1> Update Book</h1>

<%= form_for @book, url: {action: "update"} do |f| %>
    <table>
    <tr>
        <th>Book Name: </th>
        <td><%= f.text_field :title, required: true %></td>
    </tr>

    <tr>
        <th>Original Language:</th>
        <td> <%= f.text_field  :originalLanguage %> </td>
    </tr>

    <tr>
        <th>Book Date:</th>
        <td> <%= f.date_field :printDate %> </td>
    </tr>

    <tr>
         <td><%= f.submit "Update Book" %> | </td>
         <td><%=link_to "Back to Main Page",book_path %></td>
    <tr>
    <% end %>
</table>